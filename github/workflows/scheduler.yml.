name: HOH Scheduler

on:
  schedule:
    - cron: "*/5 * * * *"  # every 5 minutes (GitHub minimum)
  workflow_dispatch: {}

jobs:
  run-scheduler:
    runs-on: ubuntu-latest
    steps:
      - name: Call scheduler endpoint
        env:
          SCHEDULER_URL: ${{ secrets.SCHEDULER_URL }}
          SCHEDULER_RUN_TOKEN: ${{ secrets.SCHEDULER_RUN_TOKEN }}
        run: |
          set -euo pipefail
          echo "Calling scheduler..."
          curl -sS -X POST "$SCHEDULER_URL" \
            -H "Authorization: Bearer $SCHEDULER_RUN_TOKEN" \
            -H "Content-Type: application/json" \
            -d '{}' \
            --fail
          echo "Done."
